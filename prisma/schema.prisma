generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Genre {
  ACTION
  COMEDY
  DRAMA
  HORROR
  SCIFI
  THRILLER
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  year      Int
  genre     Genre
  rating    Float
  poster    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}